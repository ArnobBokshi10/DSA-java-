public class Main {
    public static int largestarray(int arr[]) {
        int largest = Integer.MIN_VALUE;
    for(int i = 0  ; i < arr.length ; i++){
        if(largest<arr[i]){
           largest = arr[i];
        }
    }return largest;
    }
    public static void main(String[] args) {
        int arr[] = {1, 3, 4, 5, 6, 7};
        System.out.print("Largest array is :"+largestarray(arr));
    }
}
